<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PasswordManager.ViewModels"
             xmlns:models="clr-namespace:MAUIModelsLib;assembly=MAUIModelsLib"
             x:Class="PasswordManager.Views.PasswordsListPage"
             x:DataType="viewmodels:PasswordsListViewModel"
             BackgroundColor="{DynamicResource SecondaryColor}">
    <ContentPage.BindingContext>
        <viewmodels:PasswordsListViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding Logout}" Text="Logout" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <RefreshView x:Name="refreshView" RefreshColor="Black" IsRefreshing="{Binding IsRefreshing}"
        Command="{Binding RefreshCommand}">

            <ScrollView>
                <StackLayout>

                    <CollectionView ItemsSource="{Binding Passwords}"
                                SelectedItem="{Binding SelectedPassword, Mode=TwoWay}"
                                SelectionMode="Single">
                        <!--EmptyView="No data available"-->
                        
                        <CollectionView.Header>
                            <StackLayout Orientation="Horizontal">
                                <Label 
                            Text="List of passwords"
                            SemanticProperties.HeadingLevel="Level1"
                            FontSize="32"
                            HorizontalOptions="Center" />
                            </StackLayout>
                        </CollectionView.Header>

                        <CollectionView.EmptyView>
                            <StackLayout Padding="10">
                                <Label HorizontalOptions="Center" Text="No passwords" />
                            </StackLayout>
                        </CollectionView.EmptyView>


                        <CollectionView.ItemTemplate >
                            <DataTemplate
                            x:DataType="models:Password">
                                <SwipeView>
                                    <SwipeView.RightItems>
                                        <SwipeItems>
                                            <SwipeItem
                                        BackgroundColor="Red"
                                        IsDestructive="True"
                                        Text="Delete" />
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    <Grid Padding="10">
                                        <Frame>
                                            <StackLayout Orientation="Horizontal">
                                                <StackLayout VerticalOptions="Center">
                                                    <Label
                                                Text="{Binding PasswordName}"
                                                VerticalOptions="Center" />
                                                    <Label
                                                Text="Password"
                                                VerticalOptions="Center" />
                                                </StackLayout>
                                            </StackLayout>
                                        </Frame>
                                        <!--<StackLayout Orientation="Horizontal">
                                        <StackLayout VerticalOptions="Center">
                                            <Label
                                            Text="{Binding PasswordName}"
                                            VerticalOptions="Center" />
                                        </StackLayout>
                                    </StackLayout>-->
                                    </Grid>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </StackLayout>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>

</ContentPage>
