<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PasswordManager.ViewModels"
             x:Class="PasswordManager.Views.EditPasswordPage"
             x:DataType="viewmodels:EditPasswordViewModel"
             BackgroundColor="{DynamicResource SecondaryColor}">
    <ContentPage.BindingContext>
        <viewmodels:EditPasswordViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <StackLayout>

            <Label 
            Text="Edit"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

            <!--<Button 
            Text="Show password"
            FontAttributes="Bold"
            Command="{Binding ShowPassword}"
            HorizontalOptions="Center" />-->

        </StackLayout>

    </ContentPage.Content>
</ContentPage>
