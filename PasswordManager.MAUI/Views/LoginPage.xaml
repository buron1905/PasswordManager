<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PasswordManager.MAUI.ViewModels"
             xmlns:controls="clr-namespace:PasswordManager.MAUI.Views.Controls"
             x:Class="PasswordManager.MAUI.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             Title="{Binding Title}">
    <!--Style="{StaticResource BaseContentPage}">-->
             <!--xmlns:controls="clr-namespace:PasswordManager.MAUI.Views.Controls"-->
    <ContentPage.BindingContext>
        <viewmodels:LoginViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Login" HorizontalOptions="Center" FontSize="50"/>
                <Label Text="Email Address"/>
                <Entry Text="{Binding Model.EmailAddress}"
                Placeholder="Email Address" 
                Keyboard="Email"/>
                <Label x:Name="LoginRequestDTO_EmailAddressError" 
        IsVisible="False" Style="{StaticResource LabelError}" />
                <Label Text="Password" />
                <controls:TogglePasswordEntry Placeholder="Password"
                                          Text="{Binding Model.Password}"
                                          HidePassword="True" Style="{StaticResource TogglePasswordBase}"/>
                <Label x:Name="LoginRequestDTO_PasswordError" 
        IsVisible="False" Style="{StaticResource LabelError}" />
                <Button 
                Text="Login"
                Command="{Binding LoginCommand}"
                />
                <Label Text="Registration" Style="{StaticResource LabelLink}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RegistrationCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
