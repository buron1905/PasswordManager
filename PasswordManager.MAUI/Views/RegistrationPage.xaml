<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PasswordManager.MAUI.ViewModels"
             xmlns:controls="clr-namespace:PasswordManager.MAUI.Views.Controls"
             x:Class="PasswordManager.MAUI.Views.RegistrationPage"
             x:DataType="viewmodels:RegistrationViewModel"
             Shell.FlyoutBehavior="Disabled"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <viewmodels:RegistrationViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Registration" HorizontalOptions="Center" FontSize="50"/>
                <Label Text="Email:"/>
                <Entry
                Text="{Binding Model.EmailAddress}"
                Placeholder="Email Address" 
                Keyboard="Email"/>
                <Label x:Name="EmailAddressError" 
        IsVisible="False" Style="{StaticResource LabelError}" />
                <Label Text="Password:"/>
                <controls:TogglePasswordEntry Placeholder="Password"
                                          Text="{Binding Model.Password}"
                                          HidePassword="True" Style="{StaticResource TogglePasswordBase}"/>
                <Label x:Name="PasswordError" 
        IsVisible="False" Style="{StaticResource LabelError}" />
                <Label Text="Confirm Password:"/>
                <controls:TogglePasswordEntry Placeholder="Confirm Password"
                                          Text="{Binding Model.ConfirmPassword}"
                                          HidePassword="True" Style="{StaticResource TogglePasswordBase}"/>
                <Label x:Name="ConfirmPasswordError" 
        IsVisible="False" Style="{StaticResource LabelError}" />
                <Button 
                Text="Register"
                Command="{Binding RegisterCommand}"/>
                <Label Text="Login" Style="{StaticResource LabelLink}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LoginCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
